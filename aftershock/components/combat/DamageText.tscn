func _ready() -> void:
	var tween = create_tween().set_parallel(true)
	
	# Movimiento: Subir con un Ã¡ngulo aleatorio para que no se encimen
	var random_x = randf_range(-30, 30)
	tween.tween_property(self, \"position\", Vector2(position.x + random_x, position.y - 60), 0.5)\\
		.set_trans(Tween.TRANS_CUBIC).set_ease(Tween.EASE_OUT)
	
	# Transparencia
	tween.tween_property(self, \"modulate:a\", 0.0, 0.5)
	
	# Escala (Pop)
	scale = Vector2(1.2, 1.2)
	tween.tween_property(self, \"scale\", Vector2(1.0, 1.0), 0.2)

	await tween.finished
	queue_free()

func set_values(amount: int, pos: Vector2):
	text = str(amount)
	# Centramos el texto inicialmente
	global_position = pos - (size / 2)
